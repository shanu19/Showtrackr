<!-- Starting movie showcase -->
<div class="container col-md-4 col-md-offset-4">
  <div class="loginForm">
    <div class="modal-header">
      <h4 class="modal-title" align="center"> <b> <font color="#b3b6b7">Member Login</font></b></h4>
    </div>
    <div class="modal-body">
      <form action="/login" method="post" name="login form">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
          <input type="text" class="form-control" name="name" id="unm"  placeholder="Enter your Name"/>
        </div>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-lock fa" aria-hidden="true"></i></span>
          <input type="password" class="form-control" name="password" id="pwd"  placeholder="Enter your Password"/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block btn-lg" type="submit">Login</button>
        </div>

        <div class="form-group" id="loginFormText">
          <p><b><a href="">Forgot your Password?</a></b></p>
          <p><font color="#b3b6b7">Don't have an Account yet?</font> <b><a href="/signup">Sign Up</a></b></p>
          <p><b>Or</b></p>
        </div>
        <div class="form-group">
          <a href="/auth/facebook" class="fb btn-block btn-lg">
            <i class="fa fa-facebook fa-fw"></i> Login with Facebook
          </a>
        </div>
        <div class="form-group">
          <a href="/auth/google" class="google btn-block btn-lg">
            <i class="fa fa-google fa-fw"></i> Login with Google+
          </a>
        </div>
      </form>

    </div>
  </div>
</div>
